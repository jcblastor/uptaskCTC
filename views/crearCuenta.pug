doctype html
html(lang="en")
  head
    include partials/header

  body.login
    .contenedor-formulario 
      h1 Crea tu cuenta en Uptask
      
      if locals.messages
        .alertas
          each categoria in Object.keys(locals.messages)
            each error in messages[categoria]
              .alerta(class=`${categoria}`)
                p= error

      form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
        .campo
          label(for="email") E-mail
          input(type="email" name="email" placeholder="Ingresa tu Email" value= email)
        .campo
          label(for="password") Contraseña
          input(type="password" name="password" placeholder="Ingresa tu Contraseña"  value= password) 
        .campo.enviar
          input.boton(type="submit" value="Crear Cuenta")
        .campo
          a(href="/iniciar-sesion") Volver a Iniciar Sesión
